<Page x:Class="YingCaiAiWin.Views.Pages.BrowserCrawlerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:YingCaiAiWin.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      mc:Ignorable="d" 
      Title="WebViewPage"
      d:DataContext="{d:DesignInstance local:BrowserCrawlerPage,
                                  IsDesignTimeCreatable=False}"
          d:DesignHeight="450" d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      >

    <Grid  >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <wv2:WebView2 x:Name="MyBrowser"  Grid.Column="0" Margin="20"  Source="https://www.zhaopin.com/"  />
        <!--<wv2:WebView2 x:Name="MyBrowser1"  Grid.Column="0" Margin="20"  Source="https://chat.baidu.com/search" Visibility="Collapsed"  />-->
        <!-- 控制面板 -->
        <Grid Margin="20"  Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

           
         
            <TextBlock Grid.Row="0" Grid.Column="0" FontFamily="Comic Sans MS" FontWeight="Black" VerticalAlignment="Center" Text="选择地址:" />
            <ComboBox Grid.Row="0" Grid.Column="1" Height="40" Margin="0,4" x:Name="UrlTextBox">
                <ComboBoxItem Content="智联：https://www.zhaopin.com/"  IsSelected="True"  />
                <ComboBoxItem Content="猎聘: https://www.liepin.com/" />
            </ComboBox>

            <TextBlock Grid.Row="1" Grid.Column="0" FontFamily="block"  FontWeight="Black"   VerticalAlignment="Center" Text="关键词:" />
            <TextBox Grid.Row="1" Grid.Column="1" Height="40" Margin="0,4"  x:Name="KeywordTextBox" />
            
            <TextBlock Grid.Row="2" Grid.Column="0" FontFamily="block"  FontWeight="Black"   VerticalAlignment="Center" Text="地区:" />
       
            <ComboBox Grid.Row="2" Grid.Column="1" Height="40" Margin="0,4" x:Name="Area">
               
            </ComboBox>


            <TextBlock Grid.Row="3" Grid.Column="0" FontFamily="Comic Sans MS" FontWeight="Black" VerticalAlignment="Center" Text="是否查重:" />
            <ComboBox Grid.Row="3" Grid.Column="1" Height="40" Margin="0,4"
                 x:Name="ChaChong">
                <ComboBoxItem Content="是" IsSelected="True"  />
                <ComboBoxItem Content="否" />
            </ComboBox>
            
            <TextBlock Grid.Row="4" Grid.Column="0" FontFamily="Comic Sans MS" FontWeight="Black" VerticalAlignment="Center" Text="时间间隔:" />
            <ComboBox Grid.Row="4" Grid.Column="1" Height="40" Margin="0,4"
                  x:Name="Time">
                <ComboBoxItem Content="10秒" IsSelected="True"  />
                <ComboBoxItem Content="20秒" />
                <ComboBoxItem Content="30秒"     />
                <ComboBoxItem Content="60秒" />
            </ComboBox>
            <TextBlock Grid.Row="5" Grid.Column="0" FontFamily="Comic Sans MS" FontWeight="Black" VerticalAlignment="Center" Text="获取数据/条:" />
            <ComboBox Grid.Row="5" Grid.Column="1" Height="40" Margin="0,4"
                      x:Name="DataCount">
                <ComboBoxItem Content="20" IsSelected="True"  />
                <ComboBoxItem Content="40" />
                <ComboBoxItem Content="60"    />
                <ComboBoxItem Content="100" />
            </ComboBox>
            <Grid Grid.Row="7" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ui:Button Grid.Row="0" Grid.Column="0"  Appearance="Primary" Click="Go_Click"  Content="开始执行"/>
                <ui:Button Grid.Row="0" Grid.Column="1"  Appearance="Primary" Click="Phone_Click" Background="CadetBlue" Content="获取号码"/>
            </Grid>
          
            <TextBlock Grid.Row="9" Grid.Column="0"  FontFamily="Comic Sans MS" FontWeight="Black" VerticalAlignment="Center" Text="日志:" />
            <RichTextBox Grid.Row="9" Grid.Column="1" Margin="0,20,0,0" Height="300"   x:Name="StatusTextBlock" IsReadOnly="True" />
        </Grid>
    </Grid>
</Page>

