<ui:FluentWindow 
    x:Class="YingCaiAiWin.Views.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    Title="企业客户服务系统 - 登录" 
    Height="580" Width="420"
    WindowStartupLocation="CenterScreen"
    WindowBackdropType="Mica"
    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    WindowCornerPreference="Round"
    >

    <ui:FluentWindow.Resources>
        <!-- 自定义蓝色渐变画笔 -->
        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E88E5" Offset="0"/>
            <GradientStop Color="#1976D2" Offset="1"/>
        </LinearGradientBrush>

        <!-- 自定义按钮样式 -->
        <Style x:Key="SocialButtonStyle" TargetType="ui:Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Appearance" Value="Secondary"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ui:ThemeResource ControlElevationBorderBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
 
        <!-- 主内容 -->
        <Grid Grid.Row="1">
      
            <!-- 顶部蓝色渐变背景 -->
            <Border Height="200" VerticalAlignment="Top" Background="{StaticResource HeaderGradient}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="83*"/>
                        <ColumnDefinition Width="112*"/>
                        <ColumnDefinition Width="143*"/>
                        <ColumnDefinition Width="82*"/>
                        <ColumnDefinition Width="40*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="X" Width="40" Height="40" FontSize="40" Grid.Column="4"
                        HorizontalAlignment="Right"
                         VerticalAlignment="Top"
                        Background="Transparent"
                        Foreground="White"
                        ToolTip="关闭"
                        Cursor="Hand"
                        BorderThickness="0" 
                        Click="OnCloseClick"/>
                    <Ellipse Width="300" Height="300" Fill="#2196F320" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="75,0,0,0" Grid.Column="2" Grid.ColumnSpan="2"/>
                    <Ellipse Width="200" Height="200" Fill="#2196F320" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-100,0,0,-100" Grid.ColumnSpan="2"/>

                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,36,0,0" Grid.ColumnSpan="2" Grid.Column="1">
                        <Border Width="80" Height="80" Background="White" CornerRadius="40" Margin="0,0,0,16" >
                            <Grid>
                                <Ellipse Fill="{StaticResource HeaderGradient}" Width="70" Height="70"/>
                                <ui:SymbolIcon Symbol="Person24" FontSize="28" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Grid>
                        </Border>
                        <TextBlock Text="英才销售AI工作台" FontSize="24" Foreground="White" 
                                   HorizontalAlignment="Center" FontWeight="SemiBold"/>
                        <TextBlock Text="安全登录" FontSize="14" Foreground="White" Opacity="0.8"
                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 登录表单卡片 -->
            <ui:Card Margin="30,210,30,30" VerticalAlignment="Stretch" 
                    Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                    >
                <Grid Margin="24,2,24,24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 登录标题 -->
                    <TextBlock Grid.Row="0" Text="账号登录" FontSize="20" FontWeight="SemiBold" 
                               HorizontalAlignment="Left" Margin="114,10,0,14"/>

                    <!-- 用户名输入框 -->
                    <ui:TextBox Grid.Row="1" PlaceholderText="请输入用户名/手机号" 
                                x:Name="UsernameTextBox"
                                Margin="0,0,0,16"
                                Icon="Person24"
                           PreviewTextInput="UsernameTextBox_PreviewTextInput">
                    </ui:TextBox>

                    <!-- 密码输入框 -->
                    <ui:PasswordBox Grid.Row="2" PlaceholderText="请输入密码" 
                                    x:Name="UserPassword"
                                    Margin="0,0,0,10"
                                    Icon="LockClosed24"
                                    >
                    </ui:PasswordBox>
                    <ui:InfoBar Title="错误"  Grid.Row="3" x:Name="ErrorInfoBar"  Margin="10" Message="只能输入数字和英文！" IsOpen="False"  Severity="Error"  />
                    <!-- 记住密码和忘记密码 -->
                    <Grid Grid.Row="3" Margin="0,0,0,28">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ui:HyperlinkButton  Grid.Column="1"  
                                     VerticalAlignment="Center" Click="ForgotPassword_Click"
                                     Foreground="{StaticResource HeaderGradient}"/>
                    </Grid>

                    <!-- 登录按钮 -->
                    <ui:Button Grid.Row="5" Content="登 录" 
                              Icon="Login24"
                              Appearance="Primary"
                              HorizontalAlignment="Stretch"
                              Height="44"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Background="{StaticResource HeaderGradient}"
                              Margin="0,0,0,24"
                              Click="Login_Click"/>


                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</ui:FluentWindow>
